{
  "name": "soltest-cli",
  "version": "1.1.0",
  "description": "A powerful command-line tool for Solidity smart contract development, testing, and deployment built with Bun",
  "type": "module",
  "main": "bin/soltest.ts",
  "bin": {
    "soltest": "./bin/soltest.ts"
  },
  "files": [
    "bin/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run --bun tsc",
    "compile": "bun run bin/soltest.ts compile",
    "deploy": "bun run bin/soltest.ts deploy",
    "test": "bun run bin/soltest.ts test",
    "coverage": "bun run bin/soltest.ts coverage",
    "verify": "bun run bin/soltest.ts verify",
    "networks": "bun run bin/soltest.ts networks",
    "init": "bun run bin/soltest.ts init",
    "typechain": "typechain --target ethers-v5 --out-dir types/generated ./build/*.json",
    "docs:dev": "vitepress dev docs --base /",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "release": "bun version"
  },
  "keywords": [
    "solidity",
    "testing",
    "blockchain",
    "ethereum",
    "cli",
    "bun",
    "smart-contracts",
    "deployment",
    "verification",
    "coverage",
    "security",
    "proxy",
    "upgrades",
    "plugin",
    "ganache",
    "web3"
  ],
  "author": "jeremiah-eth",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeremiah-eth/SOLTEST-CLI.git"
  },
  "bugs": {
    "url": "https://github.com/jeremiah-eth/SOLTEST-CLI/issues"
  },
  "homepage": "https://github.com/jeremiah-eth/SOLTEST-CLI#readme",
  "dependencies": {
    "axios": "^1.12.2",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.3",
    "commander": "^11.1.0",
    "dotenv": "^17.2.3",
    "ganache": "^7.9.1",
    "glob": "^10.3.10",
    "inquirer": "^12.9.6",
    "mocha": "^10.2.0",
    "solc": "^0.8.25",
    "solidity-coverage": "^0.8.16",
    "web3": "^4.3.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^11.1.2",
    "@types/chokidar": "^2.1.7",
    "@types/mocha": "^10.0.10",
    "typechain": "^8.3.2",
    "vitepress": "^1.6.4"
  }
}
